<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" android:radius="30dip" >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#26aada" />
            <gradient android:angle="-90" android:startColor="#26aada" android:endColor="#26aada"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" android:radius="30dip" >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#26aada" />
            <solid android:color="#26aada"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  android:radius="30dip">
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#26aada" />
            <gradient android:angle="-90" android:startColor="#26aada" android:endColor="#26aada" />
        </shape>
    </item>
</selector>