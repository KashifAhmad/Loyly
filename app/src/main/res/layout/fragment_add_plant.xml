<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_main_add_recipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#efefef"
    android:orientation="vertical"
    tools:context="com.ghosttech.myloyly.fragments.AddPlantFragment">

    <TableLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#b3c24b"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Title"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_plant_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Title(name)"
            android:maxLines="1"
            android:paddingLeft="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#eacb61"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Tags"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_activating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_border"
                    android:text="Activating"
                    android:textColor="#eacb61"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/btn_airways"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_border"
                    android:text="Airways"
                    android:textColor="#eacb61"
                    android:textSize="8sp" />
                <Button
                    android:id="@+id/btn_balancing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_border"
                    android:text="Balancing"
                    android:textColor="#eacb61"
                    android:textSize="8sp" />
                <Button
                    android:id="@+id/btn_tags_classic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_border"
                    android:text="Classic"
                    android:textColor="#eacb61"
                    android:textSize="8sp" />
                <Button
                    android:id="@+id/btn_entertainment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_border"
                    android:text="Entertainment"
                    android:textColor="#eacb61"
                    android:textSize="8sp" />
                <Button
                    android:id="@+id/btn_immune_system"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_border"
                    android:text="ImmuneSystem"
                    android:textColor="#eacb61"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/btn_mediation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_border"
                    android:text="Mediation"
                    android:textColor="#eacb61"
                    android:textSize="8sp" />
                <Button
                    android:id="@+id/btn_tags_modern"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_border"
                    android:text="Modern"
                    android:textColor="#eacb61"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/btn_purification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_border"
                    android:text="Purification"
                    android:textColor="#eacb61"
                    android:textSize="8sp" />
                <Button
                    android:id="@+id/btn_relax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_border"
                    android:text="Relax"
                    android:textColor="#eacb61"
                    android:textSize="8sp" />
                <Button
                    android:id="@+id/btn_seasonal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_border"
                    android:text="Seasonal"
                    android:textColor="#eacb61"
                    android:textSize="8sp" />
                <Button
                    android:id="@+id/btn_tags_show"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_border"
                    android:text="Show"
                    android:textColor="#eacb61"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/btn_tags_smoke"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_border"
                    android:text="Smoke"
                    android:textColor="#eacb61"
                    android:textSize="8sp" />
                <Button
                    android:id="@+id/btn_tags_steambath"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_orange_border"
                    android:text="Steambath"
                    android:textColor="#eacb61"
                    android:textSize="8sp" />



            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#77cfb6"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Time"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_bg_green"
            android:hint="Time in mins"
            android:inputType="numberDecimal"
            android:paddingLeft="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#fc6b34"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Ingredients"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_add_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_add_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_add_ing_1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_bg"
                    android:hint="add ingredients 1"
                    android:maxLines="1"
                    android:paddingLeft="12dp" />

                <ImageView
                    android:id="@+id/btn_add_ingredient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="7dp"
                    android:clickable="true"
                    android:src="@drawable/plus_icon"
                    android:visibility="invisible" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#a3b73a"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Instruction"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_add_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_add_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_instruction_1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_bg"
                    android:hint="add instruction 1"
                    android:maxLines="1"
                    android:paddingLeft="12dp" />

                <ImageView
                    android:id="@+id/btn_add_instructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="7dp"
                    android:clickable="true"
                    android:src="@drawable/plus_icon"
                    android:visibility="invisible" />
            </FrameLayout>
        </LinearLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#eacb61"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Steps"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/ll_add_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_add_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_step_1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edit_text_orange"
                    android:hint="add Step 1"
                    android:maxLines="1"
                    android:paddingLeft="12dp" />

                <ImageView
                    android:id="@+id/btn_add_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="7dp"
                    android:clickable="true"
                    android:src="@drawable/plus_icon"
                    android:visibility="invisible" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#77cfb6"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Image"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_image_view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/douglasfir" />

        <Button
            android:id="@+id/btn_add_image"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#b3c24b"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Add Image"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_send_data"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#b3c24b"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />
    </TableLayout>

</ScrollView>
